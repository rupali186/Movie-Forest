<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentAbout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rupali.movieforest.AboutFragment"
    tools:showIn="@layout/fragment_about"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/about_us" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#795548"
        android:text="@string/about_content" />
    <TextView
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Follow Us On"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/facebook"/>
        <ImageView
            android:id="@+id/twitter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/twitter"/>
        <ImageView
            android:id="@+id/googlePlus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/google_plus"/>
    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_marginTop="32dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/powered_by_tmdb"
        android:layout_marginBottom="8dp"/>

</LinearLayout>

</android.support.v4.widget.NestedScrollView>
